<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Tahun Ajaran 2020 / 2021"
        android:textStyle="bold"
        android:textSize="15dp"/>
<androidx.cardview.widget.CardView
    android:id="@+id/card_ganjil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="53dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_semester"
            android:scaleType="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/semester"
            android:layout_width="104dp"
            android:layout_height="17dp"
            android:text="Semester Ganjil"
            android:textStyle="bold"
            android:textSize="13dp"
            android:layout_marginStart="5dp"
            />
        <TextView
            android:id="@+id/keterangan"
            android:layout_width="205dp"
            android:layout_height="14dp"
            android:text="Dibagikan pada"
            android:textSize="12dp"
            android:textColor="@color/abu"
            android:layout_marginStart="5dp"
            />

    </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_genap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        android:elevation="4dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="328dp"
            android:layout_height="53dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_margin="2dp">

            <ImageView
                android:id="@+id/icon.2"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_semester"
                android:scaleType="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/semester.2"
                    android:layout_width="104dp"
                    android:layout_height="17dp"
                    android:text="Semester Genap"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_marginStart="5dp"
                    />
                <TextView
                    android:id="@+id/keterangan.2"
                    android:layout_width="205dp"
                    android:layout_height="14dp"
                    android:text="Dibagikan pada"
                    android:textSize="12dp"
                    android:textColor="@color/abu"
                    android:layout_marginStart="5dp"
                    />

            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>