<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/layoutlogin"
    tools:context=".Auth.AuthActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="20dp"
        android:background="@color/colorLight"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorLight"
            android:orientation="vertical"
            android:padding="24dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lupa Password"
                android:textAlignment="center"
                android:textSize="28dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/nisn_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NISN"
                android:background="@drawable/custom_stroke"
                android:padding="10dp"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawableTint="@color/colorMedium"
                android:drawablePadding="16dp"
                android:layout_marginTop="35dp"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/txt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password baru"
                android:background="@drawable/custom_stroke"
                android:padding="10dp"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawableTint="@color/colorMedium"
                android:drawablePadding="16dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:inputType="textPassword"/>
            <EditText
                android:id="@+id/password_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ulangi Password"
                android:background="@drawable/custom_stroke"
                android:padding="10dp"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawableTint="@color/colorMedium"
                android:drawablePadding="16dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:inputType="textPassword"/>
            <!--<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                app:startIconDrawable="@drawable/baseline_lock_24"
                app:startIconTint="@color/colorMedium"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/colorMedium"
                app:hintEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_field"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_stroke"
                    android:textSize="18dp"
                    android:hint="Ulangi Password"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>-->
            <Button
                android:id="@+id/btn_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:text="Reset Password"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>